@{
    ViewBag.Title = "Inicio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="max-width: 980px;">
    <div class="jumbotron" style="margin-top:20px;">
        <h1 class="display-4">Sistema Académico</h1>
        <p class="lead">Seleccione una opción para continuar.</p>
        <hr class="my-4" />

        <div class="row" style="margin-top:15px;">
            <div class="col-sm-4" style="margin-bottom:12px;">
                <a class="btn btn-primary btn-block"
                   href="@Url.Action("Crear","Estudiantes")">
                    Registrar Estudiante
                </a>
            </div>
            <div class="col-sm-4" style="margin-bottom:12px;">
                <a class="btn btn-success btn-block"
                   href="@Url.Action("Index","Evaluaciones")">
                    Evaluaciones
                </a>
            </div>
            <div class="col-sm-4" style="margin-bottom:12px;">
                <a class="btn btn-info btn-block"
                   href="@Url.Action("Index","Estadisticas")">
                    Estadísticas
                </a>
            </div>
        </div>

        <div class="alert alert-info" style="margin-top:16px;">
            @if (User.Identity.IsAuthenticated)
            {
                <span>Conectado como <strong>@User.Identity.Name</strong>.</span>
                if (!User.IsInRole("Docente"))
                {
                    <span> Algunas páginas requieren el rol <strong>Docente</strong>.</span>
                }
            }
            else
            {
                <span>Para acceder a módulos protegidos, inicie sesión.</span>
            }
        </div>
    </div>
</div>
